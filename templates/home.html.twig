{% extends 'structure.html.twig' %}

{% block content %}
	<ul class="nav nav-tabs">
		<li class="nav-item">
			<a id="groupe-tab" class="nav-link active" href="#" data-toggle="tab" role="tab" aria-controls="groupes" aria-selected="true">Phase de groupes</a>
		</li>
		<li class="nav-item">
			<a id="huitieme-tab" class="nav-link {% if nbhuitieme == 0 %}disabled{% endif %}" href="#" data-toggle="tab" role="tab" aria-controls="huitiemes" aria-selected="false">Huiti√®mes</a>
		</li>
		<li class="nav-item">
			<a id="quart-tab" class="nav-link {% if nbquart == 0 %}disabled{% endif %}" href="#" data-toggle="tab" role="tab" aria-controls="quarts" aria-selected="false">Quarts</a>
		</li>
		<li class="nav-item">
			<a id="demi-tab" class="nav-link {% if nbdemi == 0 %}disabled{% endif %}" href="#" data-toggle="tab" role="tab" aria-controls="demis" aria-selected="false">Demis</a>
		</li>
		<li class="nav-item">
			<a id="little-finale-tab" class="nav-link {% if nbpetitefinale == 0 %}disabled{% endif %}" href="#" data-toggle="tab" role="tab" aria-controls="finale" aria-selected="false">Petite finale</a>
		</li>
		<li class="nav-item">
			<a id="finale-tab" class="nav-link {% if nbfinale == 0 %}disabled{% endif %}" href="#" data-toggle="tab" role="tab" aria-controls="finale" aria-selected="false">Finale</a>
		</li>
	</ul>
	<div class="tab-content" id="pronosTabContent">
		<div class="tab-pane fade show active" id="groupes" role="tabpanel" aria-labelledby="groupe-tab">
			<div class="row">
				{% for group, match in matchs %}
					<div class="col-3">
						<h3 class="text-center">{{ group }}</h3>
						{% for meeting in match %}
							<p class="text-center">{{ meeting[0] }} <br> {{ meeting[1] }}</p>
						{% endfor %}
					</div>
				{% endfor %}
			</div>
		</div>
		<div class="tab-pane fade show" id="huitiemes" role="tabpanel" aria-labelledby="huitieme-tab">
			<div class="row"></div>
		</div>
		<div class="tab-pane fade show" id="quarts" role="tabpanel" aria-labelledby="quart-tab">
			<div class="row"></div>
		</div>
		<div class="tab-pane fade show" id="demis" role="tabpanel" aria-labelledby="demi-tab">
			<div class="row"></div>
		</div>
		<div class="tab-pane fade show" id="little-finale" role="tabpanel" aria-labelledby="little-finale-tab">
			<div class="row"></div>
		</div>
		<div class="tab-pane fade show" id="finale" role="tabpanel" aria-labelledby="finale-tab">
			<div class="row"></div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
	<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
	<script src="{{ asset('build/js/app.js') }}" type="text/javascript"></script>
{% endblock %}